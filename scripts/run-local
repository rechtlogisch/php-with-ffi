#!/bin/sh

if [ -z "$1" ] || [ -z "$2" ]; then
    echo "Please provide exactly two arguments"
    echo "Usage: run-local /path/local \"php -v\""
    exit 1
fi

MOUNT=$1
COMMAND=$2

docker run -it \
  --rm \
  --name ffier \
  -v "$MOUNT":/var/www \
  rechtlogisch/ffier:"${IMAGE_TAG:-latest}" \
  $COMMAND
